<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yuliya.loginova.ru.wheather.MainActivity">

    <EditText
        android:id="@+id/editText_Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/place"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/editText_Temperature"
        android:layout_width="134dp"
        android:layout_height="85dp"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/temperature"
        app:layout_constraintBaseline_toBaselineOf="@id/editText_Place"
        app:layout_constraintLeft_toRightOf="@id/editText_Place" />

    <EditText
        android:id="@+id/editText_Probability_of_precipitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/probability_of_precipitation"
        app:layout_constraintTop_toBottomOf="@id/editText_Place"
        app:layout_constraintLeft_toLeftOf="@id/editText_Place" />

    <EditText
        android:id="@+id/editText_Humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/humidity"
        app:layout_constraintLeft_toLeftOf="@id/editText_Probability_of_precipitation"
        app:layout_constraintTop_toBottomOf="@id/editText_Probability_of_precipitation" />

    <PlainText
        android:id="@+id/editText_Prower_of_Wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/power_of_wind"
        app:layout_constraintTop_toBottomOf="@id/editText_Humidity"
        app:layout_constraintLeft_toLeftOf="@id/editText_Humidity" />

    <ImageView
        android:id="@+id/imageView_Whether_Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@id/editText_Temperature"
        app:layout_constraintLeft_toLeftOf="@id/editText_Temperature" />


</android.support.constraint.ConstraintLayout>
